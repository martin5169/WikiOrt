@model WikiORT.Models.PalabraClave

@{
    ViewData["Title"] = "Create";
}



<h4>Palabra Clave</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Palabra" class="control-label"></label>
                <input asp-for="Palabra" class="form-control" />
                <span asp-validation-for="Palabra" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear palabra clave" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div class="pt-1 mb-4">
    <button class="btn btn-info btn-lg btn-block" type="button" onclick="location.href='@Url.Action("VistaParaAdministradores", "Administradores")'"> Volver al menu</button>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
